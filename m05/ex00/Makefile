
NAME      = bureaucrat
SRCS      = main.cpp Bureaucrat.cpp
OBJS      = $(SRCS:.cpp=.o)

CXX       = c++
CXXFLAGS  = -Wall -Wextra -Werror -std=c++98

all: $(NAME)

# Link
$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $^ -o $@

# Compile each .cpp â†’ .o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re